/* pages/appoint/expert-detail/expert-detail.wxss */
.top{
  width:100%; height: 230rpx;
  background-color: #5ac0ce;
}

.expert-info{
  width:690rpx; height: 355rpx;
  box-shadow: 0 0 5rpx #aaa;
  position: relative;
  margin:0 auto;
  top:-100rpx;
  z-index: 1000;
  border-radius: 10rpx;
}
.expert-info .ebg{
  width:690rpx; height: 355rpx;
  top:0; left:0;
}
.expert-info .expert-pic{
  width:176rpx;height: 176rpx;
  position: absolute;
  left:65rpx; top:-65rpx;
}
.expert-info .expert-pic image{
  width:inherit; height: inherit;
  border-radius: 50%;
}
.expert-info .expert-first{
  width:550rpx;
  margin:130rpx auto 0;
  display: flex;
  position: absolute;
  top:0; left:70rpx;
}
.expert-first .exname{
  font-weight: bold;
  font-size: 36rpx;
  margin-right: 10rpx;
}
.expert-first .pos{
  width:auto; height: 40rpx;
  line-height: 40rpx;
  background-color: #dff3f4;
  border-radius: 30rpx;
  font-size: 30rpx;
  padding:5rpx 20rpx;
  margin-right: 10rpx;
  color:#59c1ce;
}
.expert-first .disc{
  width:auto; height: 40rpx;
  line-height: 40rpx;
  background-color: #feeed5;
  border-radius: 30rpx;
  font-size: 30rpx;
  padding:5rpx 20rpx;
  margin-right: 10rpx;
  color:#f9a92e;
}

.expert-hospital{
  width:636rpx; height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  position: absolute;
  top:200rpx; left:27rpx;
}
.expert-hospital image{
  width:29rpx; height: 30rpx;
  vertical-align: middle;
}
.expert-hospital .hos{
  width:600rpx;
  vertical-align: middle;
  display: inline-block;
  margin-left: 6rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.dibu{
  width:100%; height: 90rpx;
  position: absolute;
  bottom:0;
  display: flex;
  border-top:solid 1px #ddd;
}
.dibu .score{
  border-right: solid 1px #ddd;
}
.dibu .score,
.dibu .reserve{
  width:50%; height: inherit;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
  color:#343434;
}
.dibu .score image,
.dibu .reserve image{
  width:49rpx; height: 49rpx;
  vertical-align: middle;
}

.goodat,.intro,.science{
  width:690rpx;
  background-color: #fff;
  box-shadow: 0 0 5rpx #aaa;
  margin:0 auto;
  top:-100rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding:23rpx;
  padding-top: 0;
  margin-bottom: 30rpx;
}
.goodat{
  margin:-70rpx auto 30rpx;
}
.science{
  height: 600rpx;
}
.goodat .title,
.intro .title,
.science .title{
  width:100%; height: 75rpx;
  border-bottom: solid 1px #ddd;
  line-height: 75rpx;
  font-size: 34rpx;
  color:#69c5d2;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.goodat .title image,
.intro .title image,
.science .title image{
  width:32rpx; height: 32rpx;
  vertical-align: middle;
}
.goodat .content,
.intro .content{
  color:#343434;
  font-size: 28rpx;
  text-align: justify;
  line-height: 40rpx;
}

.carousel{
  position: relative;
  top: 0
}
.science swiper{
  height: 450rpx;
}
.science swiper swiper-item{
  margin:0 5rpx;
}
.science swiper swiper-item view{
  text-align: center;
  font-size: 30rpx;
}
.dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -40rpx;
  display: flex;
  justify-content: center;
}

.dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #e1e1e1;
  border-radius: 8rpx;
  transition: all .6s;
}
.dot.active{
  width: 40rpx;
  background: #34b9b6;
}

.science image{
  border-radius: 10rpx;
}