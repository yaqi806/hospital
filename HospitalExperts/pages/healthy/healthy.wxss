/* pages/healthy/healthy.wxss */
page{
  background-color: #f6f6f6;
}
.hot{
  display: inline-block;
  width:24rpx; height: 24rpx;
  border:solid 1px #e00;
  color:#e00;
  border-radius: 5rpx;
  padding:0;
  font-size: 20rpx;
  text-align: center;
  line-height: 24rpx;
  margin-right: 14rpx;
  vertical-align: middle
}
.healthy-adv{
  width:750rpx; height: 180rpx;
  margin-bottom: 30rpx;
}
.healthy-adv image{
  width:inherit; height: inherit
}

.healthy-content{
  width:100%; 
  background-color: #fff;
}
.healthy-content .healthy-nav{
  width:100%; height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  border-bottom: solid 1px #ddd;
  text-indent: 25rpx;
}
.healthy-content .healthy-nav .healthy-nav-text{
  margin-right: 60rpx;}
.ac{
  font-weight: bold;
  color:#000;
}

.healthy-news{
  width:700rpx; height:inherit;
  margin: 0 auto;
}
.healthy-news .item{
  width:100%; height: 180rpx;
  box-sizing: border-box;
  padding-top: 35rpx;
  border-bottom:solid 1px #ddd;
  display: flex;
  justify-content: space-between
}
.healthy-news .item .item-left{
  width:480rpx;
}
.healthy-news .item .item-left .item-title{
  font-size: 29rpx;
  margin-bottom: 10rpx;
}
.healthy-news .item .item-left .item-view-forward{
  font-size: 26rpx;
  color:#888
}
.healthy-news .item .item-left .item-view-forward image{
  width:34rpx; height: 25rpx;
}
.two{
  margin-left: 20rpx;
}
.healthy-news .item .item-right{
  width:180rpx; height: 120rpx;
}
.healthy-news .item .item-right image{
  width:inherit; height: inherit;
  border-radius: 10rpx;
}


.sp{
  width:690rpx;
  margin-top:30rpx; 
}
.sp video{
  width:690rpx;
}
.sp-item{
  width:690rpx; height: 100rpx;
  margin:0 auto;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between
}
.sp-item .sp-item-left{
  width:480rpx;
}
.sp-item .sp-item-left .sp-item-title{
  font-size: 29rpx;
  margin-bottom: 10rpx;
}
.sp-item .sp-item-left .sp-item-view-forward{
  font-size: 26rpx;
  color:#888
}
.sp-item .sp-item-left .sp-item-view-forward image{
  width:34rpx; height: 25rpx;
}

.sp-item .sp-item-right{
  width:137rpx; height: 47rpx;
  margin:23rpx 23rpx 0 0;
  position: relative;
}
.sp-item .sp-item-right image{
  width:137rpx; height: 47rpx;
  border-radius: 10rpx;
}
.sp-item .sp-item-right .zans{
  position: absolute;
  left:45rpx; top:8rpx;
  font-size: 20rpx;
  color:#fff;
}

.fm-item{
  width:216rpx; height: 165rpx;
  float:left;
  margin-right: 21rpx;
  margin-bottom: 21rpx;
}
.fm-item:nth-child(3n){
